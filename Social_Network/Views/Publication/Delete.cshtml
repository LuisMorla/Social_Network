@model Social_Network.Core.Application.ViewModels.Publications.SavePublicationViewModel

@{
    ViewData["Title"] = "Eliminar Pokemon";
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header bg-primary text-white">
                <h4>Are you sure you want to delete this publication?</h4>
                <div class="card-body">
                    <form method="post" asp-controller="Publication" asp-action="DeletePost">
                        <input type="hidden" asp-for="Id" />
                        <button type="submit" class="btn btn-warning">Eliminar</button>
                        <a asp-controller="Publication" asp-action="Index" class="btn btn-primary">Cancelar</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>