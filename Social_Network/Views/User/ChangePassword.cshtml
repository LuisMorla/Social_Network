<div class="container-fluid">
    <div class="row mt-4">
        <div class="col-12">
            <div class="row">
                <div class="col-4 offset-4">
                    <div class="card">
                        <div class="card-body">
                            <form method="post" asp-controller="User" asp-action="ChangePassword">
                                <div class="text-center">
                                    <label class="form-label">Enter your User Name</label>
                                    <input class="form-control" type="text" name="UserName" id="UserName" />
                                </div>
                                <center>
                                    <div class="col-3 mt-2 d-flex flex-row gap-2">
                                        <button type="submit" class="btn btn-success">Restore</button>
                                        <a class="btn btn-sm btn-warning" asp-controller="User" asp-action="Index">Back</a>
                                    </div>
                                </center>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>