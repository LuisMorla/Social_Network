@using Social_Network.Core.Application.ViewModels.Users;
@model LoginViewModel
<div class="container-fluid">
    <div class="row justify-content-center mt-4">
        <div class="col-sm-6 col-md-4">
            @Html.ValidationSummary(false,"",new {@class = "text-danger"})
            <p class="text-success">@ViewBag.ActivationMessage</p>
            <form class="login-form" method="post" asp-controller="User" asp-action="Index">
                <h2 class="text-center mb-3 text-white">Sign in</h2>
                <div asp-for="UserName" class="form-floating mb-3">
                    <input asp-for="Username" type="text" class="form-control bg-dark text-white" placeholder="UserName">
                    <label asp-for="Username" class="text-white">User Name</label>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Password" class="form-control bg-dark text-white" id="password" placeholder="Password">
                    <label asp-for="Password" class="text-white">Password</label>
                </div>
                <div class="d-grid gap-2 mb-3">
                    <button class="btn btn-primary" type="submit">Sign in</button>
                </div>

            </form>
            <div class="d-grid gap-2 mb-3">
                <a asp-asp-controller="User" asp-action="Register" class="btn btn-success">Register</a>
            </div>
            <div class="text-center">
                <p class="text-warning">Forgered Your Password?</p>
                <a asp-controller="User" asp-action="ChangePassword" class="btn btn-outline-warning"><i class="fab fa-facebook-f">Recovered</i></a>
            </div>
        </div>
    </div>
</div>
<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-lkD9X2yZgjEfZktV1Y+YH24cW7kDDCUxZfwJ7Hnc+zt9Xt7h4BCJjFV7mlYwDMDd" crossorigin="anonymous"></script>