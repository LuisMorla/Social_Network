@using Social_Network.Core.Application.ViewModels.Users;
@model UserViewModel
<div class="container">
    <div class="row mt-5">
        <div class="col-md-6 mx-auto">
            <div class="card">
                <div class="card-header d-flex flex-row m-0 p-2">
                    <img src="@Model.ImageUser" alt="" class="gap-3 rounded-circle" width="50" height="50" />
                    <h4 class="mleft-p mt-2">Profile</h4>
                </div>
                <div class="card-body">
                    <div class="form-group">
                        <label for="name">First Name</label>
                        <input type="text" id="name" class="form-control" value="@Model.Name" readonly>
                    </div>
                    <div class="form-group mt-2">
                        <label for="name">Last Name</label>
                        <input type="text" id="name" class="form-control" value="@Model.LastName" readonly>
                    </div>
                    <div class="form-group mt-2">
                        <label for="address">User Name</label>
                        <input type="text" id="name" class="form-control" value="@Model.Username" readonly>
                    </div>
                    <div class="form-group mt-2">
                        <label for="email">Email</label>
                        <input type="email" id="email" class="form-control" value="@Model.Email" readonly>
                    </div>
                    <div class="form-group mt-2">
                        <label for="phone">Phone</label>
                        <input type="tel" id="phone" class="form-control" value="@Model.Phone" readonly>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
